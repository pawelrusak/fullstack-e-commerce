{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@e-shop/database": ["libs/shared/database/src/index.ts"],
      "@e-shop/database/models": ["libs/shared/database/src/models.ts"],
      "@e-shop/fixtures": ["libs/fixtures/src/index.ts"],
      "@e-shop/i18n": ["libs/shared/i18n/src/index.ts"],
      "@e-shop/icons": ["libs/shared/icons/src/index.ts"],
      "@e-shop/test-utils": ["libs/shared/test-utils/src/index.ts"],
      "@e-shop/theme": ["libs/shared/theme/src/index.ts"],
      "@e-shop/theme/server": ["libs/shared/theme/src/server.ts"],
      "@e-shop/types": ["libs/shared/types/src/index.ts"],
      "@e-shop/ui": ["libs/shared/ui/src/index.ts"],
      "@e-shop/utils": ["libs/shared/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
